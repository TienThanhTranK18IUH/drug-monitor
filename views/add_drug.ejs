<!-- Main section -->
<main id="main">
  <a href="/">
    <span><i class="fas fa-arrow-left"></i> All Drugs</span>
</a>

<h2>Add a Drug</h2>
<p>Use the below form to add a new drug</p>
<!-- Add drug form -->
<form method="POST" id="add_drug">
  <div>
    <label>Drug Name</label>
    <input type="text" name="name" required>
  </div>
  <div>
    <label>Tablets per Card</label>
    <input type="number" name="card" min="1000" required>
  </div>
  <div>
    <label>Tablets per Pack</label>
    <input type="number" name="pack" min="0" required>
  </div>
  <div>
    <label>Taken per Day</label>
    <input type="number" name="perDay" min="0" max="90" required>
  </div>
  <div>
    <label>Dosage</label>
    <input type="text" name="dosage" required>
  </div>
  <button type="submit">Add Drug</button>
</form>

</main>
<!-- End main section -->
