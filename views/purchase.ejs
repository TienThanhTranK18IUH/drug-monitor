<!-- add header -->
<%- include('includes/_header') %>
<!-- end header -->

<!-- Main section -->
<main id="main">

  <h2>Calculate Drugs to Purchase</h2>
  <p>For how many days do you want to purchase drugs?</p>
  <form id="drug_days">
    <input type="number" id="days" value="30" min="1" required>
    <button type="submit">Enter</button>
  </form>

  <table id="purchase_table" style="display:none;">
    <thead>
      <tr>
        <th>#</th>
        <th>Drug Name</th>
        <th>Cards to Buy</th>
        <th>Packs to Buy</th>
      </tr>
    </thead>
    <tbody>
      <!-- Loop through drugs -->
      <% drugs.forEach((drug, i) => { %>
        <tr data-perday="<%= drug.perDay %>" data-card="<%= drug.card %>" data-pack="<%= drug.pack %>">
          <td><%= i + 1 %></td>
          <td><%= drug.name %></td>
          <!-- các ô này sẽ được JS tính toán lại -->
          <td class="cards-cell"></td>
          <td class="packs-cell"></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</main>
<!-- End main section -->

<!-- add footer -->
<%- include('includes/_footer') %>
<!-- end footer-->
